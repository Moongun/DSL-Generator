{% extends 'base_logged.html.twig' %}

{% block content %}
    <div class="container content">
        <div class="row pb-5">
            <div class="col-lg-12 text-center">
                <span class='content-header'>Wprowadź warunki diety</span>
            </div>
        </div>

        {{ form_start(form) }}
        <div class="row py-5">
            <div class="col-lg-12">
                <span>Warunki dietetyczne:</span>
            </div>
        </div>
        <div class="row pb-4">
            {% if(form_errors(form.dailyCaloriesRequirementsKcal)) %}
                <div class="col-lg-3 col-md-6 py-2 error">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    {{form_errors(form.dailyCaloriesRequirementsKcal)}}
                </div>
            {% else %}
                <div class="col-lg-3 col-md-6"></div>
            {% endif %}
            {% if(form_errors(form.dailyProteinRequirementsG)) %}
                <div class="col-lg-3 col-md-6 py-2 error">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    {{form_errors(form.dailyProteinRequirementsG)}}
                </div>
            {% else %}
                <div class="col-lg-3 col-md-6"></div>
            {% endif %}
            {% if(form_errors(form.dailyCarbohydratesRequirementsG)) %}
                <div class="col-lg-3 col-md-6 py-2 error">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    {{form_errors(form.dailyCarbohydratesRequirementsG)}}
                </div>
            {% else %}
                <div class="col-lg-3 col-md-6"></div>
            {% endif %}
            {% if(form_errors(form.dailyFatRequirementsG)) %}
                <div class="col-lg-3 col-md-6 py-2 error">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    {{form_errors(form.dailyFatRequirementsG)}}
                </div>
            {% else %}
                <div class="col-lg-3 col-md-6"></div>
            {% endif %}
        </div>
        <div class="row text-center">
            <div class="col-lg-3 col-md-6">
                <div class="pb-4">energia</div>
                <div>{{form_widget(form.dailyCaloriesRequirementsKcal, {'attr':{'placeholder':'kcal', 'class':'condition-one'}})}}</div>
                {#dzienne zapotrzebowanie energetyczne            #}
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="pb-4">białko</div>
                {{form_widget(form.dailyProteinRequirementsG, {'attr':{'placeholder':'g', 'class':'condition-one'}})}}
                {#            dzienne zapotrzebowanie na białko#}
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="pb-4">węglowodany</div>
                {{form_widget(form.dailyCarbohydratesRequirementsG, {'attr':{'placeholder':'g', 'class':'condition-one'}})}}
                {#            dzienne zapotrzebowanie na węglowodany#}
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="pb-4">tłuszcze</div>
                {#                {{form_widget(form.dailyFatRequirementsG, {'attr':{'placeholder':'dzienne zapotrzebowanie na tłuszcz', 'class':'condition-one'}})}}#}
                {{form_widget(form.dailyFatRequirementsG, {'attr':{'placeholder':'g', 'class':'condition-one'}})}}
                {#                dzienne zapotrzebowanie na tłuszcz#}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="row py-5">
                    <div class="col-lg-12">
                        <span>Warunek finansowy:</span>
                    </div>
                </div>
                {% if(form_errors(form.monthlyCost)) %}
                    <div class="row pb-4">
                        <div class="col-lg-12 py-2 error">
                            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                            {{form_errors(form.monthlyCost)}}
                        </div>
                    </div>
                {% endif%}
                <div class="row">
                    <div class="col-lg-12 text-center">
                        {{form_widget(form.monthlyCost, {'attr':{'placeholder':'zł', 'class':'condition-two text-right', 'novalidate': 'novalidate'}})}}
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row py-5">
                    <div class="col-lg-12">
                        <span> Warunki cykliczne:</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 pb-5">
                        <span>
                            {{form_row(form.periodicities, {'attr':{'class':''}})}}
                        </span>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-right">
                <input type="submit" value="Stwórz dietę", class="button" />
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock content %}