{#{% extends 'base_logged.html.twig' %}#}

{#{% block content %}#}
<html>
    <head>
        <meta charset="UTF-8"/>
        <style>
            body {
                width: 2480px;

            }

            table {
                /*width: 70%;*/
                border-collapse: collapse;
            }

            table, th, td {
                border: 1px solid black;
            }

            td {
                padding: 5px;
            }

            th {
                padding: 10px;
            }

            .main-header {
                background-color: darkred;
                color: whitesmoke;
            }

            #content {
                margin: 30px 15px 30px 15px;
            }
        </style>
    </head>
    <body>

        <div id="content">

            {#        wymagania#}
            <table>
                <thead>
                <tr class="main-header">
                    <th colspan="2">Wymagania</th>
                </tr>
                <tr>
                    <th>klucz</th>
                    <th>wartość</th>
                </tr>
                </thead>
                <tbody>
                {% for key, value in requirements %}
                    {% if value is iterable %}
                        {% set collection = value %}
                        <tr>
                            <td colspan="2">{{ key }}</td>
                        </tr>
                        {% for key, element in collection %}
                            <tr>
                                <td>{{ key+1 }}</td>
                            </tr>
                            {% for key, value in element %}
                                <tr>
                                    <td>{{ key }}</td>
                                    <td>{{ value }}</td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td>{{ key }}</td>
                            <td>{{ value }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>

            {#    statystyki#}
            <table>
                <thead>
                <tr class="main-header">
                    <th colspan="2">statystyki diety</th>
                </tr>
                <tr>
                    <th>klucz</th>
                    <th>wartość</th>
                </tr>
                </thead>
                <tbody>
                {% for key, value in statistics %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>{{ value | number_format(0, '.', ' ') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>


            {#      posiłki - tygodnie #}
            {% for key, week in grouped_meals %}
                <table>
                    <thead>
                    <tr class="main-header">
                        <th colspan="6">{{ key }}</th>
                    </tr>
                    <tr>
                        <th>dzień</th>
                        <th>śniadanie</th>
                        <th>brunch</th>
                        <th>lunch</th>
                        <th>obiad</th>
                        <th>kolacja</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, day in week %}
                        <tr>
                            <td>{{ key }}</td>
                            {% for meal in day %}
                                <td>{{ meal }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
            {% endfor %}

            {#        TODO dodać przepisy#}
        </div>

    </body>
</html>

{#{% endblock content %}#}