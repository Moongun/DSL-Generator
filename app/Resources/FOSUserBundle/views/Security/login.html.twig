{% extends "base.html.twig" %}

{% block body %}
    {{ include('FOSUserBundle:Security:login_content.html.twig') }}

    <style>
        .facebook-button {
            width: max-content;
            background-color: steelblue;
            line-height: 24px;
            color: ghostwhite;
            text-align: center;
            position: relative;
            display: flex;
            padding: 3px;
            box-shadow: #bdbbbb 1px 1px 1px;
            margin-left: 40%;
        }

        .facebook-button:hover {
            cursor: default;

            box-shadow: #bdbbbb 3px 3px 4px;
            animation-name: shadowing;
            animation-duration: 0.1s;
        }

        @keyframes shadowing{
            0%   {box-shadow: #bdbbbb 1px 1px 1px;}
            50%  {box-shadow: #bdbbbb 2px 2px 2px;}
            100% {box-shadow: #bdbbbb 3px 3px 4px;}
        }

        .fb-span{
            display: block;
            margin-left: 20px;
            margin-right: 20px;
            vertical-align: middle;
            line-height: 30px;
        }

        .fb-i {
            font-size: 30px;
        }


    </style>

    <a href="/register" class="start-a">
        <div class="">
            <i class="fa fa-users start-icons" aria-hidden="true"></i>
            <span class="">ZAREJESTRUJ</span>   
        </div>
    </a>

    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" alt="Sign in with Facebook">
        <div class="facebook-button">
            <i class="fa fa-facebook-official fb-i" aria-hidden="true"></i>
            <span class="fb-span">Zaloguj przez Facebook</span>
        </div>
    </a>
{% endblock body %}
