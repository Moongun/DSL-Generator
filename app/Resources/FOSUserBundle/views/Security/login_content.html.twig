{% trans_default_domain 'FOSUserBundle' %}
{% block body%}
    <div class='container'>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            {#    <label for="username">{{ 'username'|trans }}</label>#}
            <div>
                <input type="text" id="username"  class='fos_register_div' name="_username" value="{{ last_username }}" required="required" placeholder='Login' />
            </div>
            <div>
                {#                <label for="password">{{ 'password'|trans }}</label>#}
                <input type="password" id="password" class='fos_register_div' name="_password" required="required" placeholder ='HasÅ‚o' />
            </div>
            <div class='fos_register_div login'>
                <div class='checkbox login-div'>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me" class='login-div-label'></label><span>{{ 'remember me'|trans }}</span>
                </div>

            </div>

            <div>
                <input type="submit" id="_submit" class='fos_register_div submit' name="_submit" value="{{ 'Create Account'|trans }}" />
            </div>
        </form>
    </div>
{% endblock body %}
