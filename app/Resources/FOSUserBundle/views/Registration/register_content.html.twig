{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div id='fos_register_form'>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div>
            {{form_errors(form.username)}} 
            {#            <label for="fos_username">Login:</label>#}
            {{form_widget(form.username, {'attr':{'id':'fos_username', 'placeholder':'Login', 'class':'fos_register_div'}})}}
        </div>
        <div>
            {{form_errors(form.email)}}
            {#            <label>Email:</label>#}
            {{form_widget(form.email, {'attr':{'id':'fos_email', 'placeholder':'Email', 'class':'fos_register_div'}})}}
        </div>
        <div>
            {{form_errors(form.plainPassword.first)}}
            {#            <label for="fos_user_password_first">Hasło:</label>#}
            {{form_widget(form.plainPassword.first, {'attr':{'id':'fos_user_password_first', 'placeholder':'Hasło', 'class':'fos_register_div'}})}}
        </div>
        <div>
            {{form_errors(form.plainPassword.second)}}
            {#            <label for="fos_user_password_second">Powtórz hasło:</label>#}
            {{form_widget(form.plainPassword.second, {'attr':{'id':'fos_user_password_second', 'placeholder':'Powtórz hasło', 'class':'fos_register_div'}})}}
        </div>
        <div>
            {#        <input type="submit" value="{{ 'registration.submit'|trans }}" />#}
            <input type="submit" value="Rejestruj" , class='fos_register_div submit' />
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}


